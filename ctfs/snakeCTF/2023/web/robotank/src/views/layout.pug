doctype html
html(lang="en" data-bs-theme="dark")
  head
    title= title
    link(href="https://cdn.jsdelivr.net/npm/halfmoon@2.0.1/css/halfmoon.min.css" rel="stylesheet" integrity="sha256-SsJizWSIG9JT9Qxbiy8xnYJfjCAkhEQ0hihxRn7jt2M=" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous")     
    script(src="https://code.jquery.com/jquery-3.7.1.min.js")
    script(src="/js/form.js")
    script(src="/js/bbrender.js")
  body
    .navbar.sticky-top.navbar-expand-lg
      .container-fluid
        a.navbar-brand(href="/") Robotank
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbar-collapse-1" aria-controls="navbar-collapse-1" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse(id="navbar-collapse-1")
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            if user
              li.nav-item
                a.nav-link(href=`/account/${user.id}`) Account
          .d-flex
            if !user
              a.btn.btn-primary(href="/auth/login") Login
            else 
              a.btn.btn-primary(href="/auth/logout") Logout
    
    .container
      block content
      .row.justify-content-center
        .mt-3.col-9
          .alert.text-center(hidden role="alert" id="messagebox")
            h5.alert-heading(id="messagebox_heading") 
            p(id="messagebox_content")
            img(style="max-width: 75%;" id="messagebox_image")
